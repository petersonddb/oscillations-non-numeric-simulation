{
  "version": 6,
  "configurePresets": [
    {
      "name": "release",
      "binaryDir": "./release",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
    },
    {
      "name": "debug",
      "inherits": "release",
      "binaryDir": "./build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "1"
      }
    }
  ]
}

